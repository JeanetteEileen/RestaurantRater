@model IEnumerable<GeneralStore.MVC.Models.Product>
    @{
    ViewBag.Title = "Index";
}

<h2>List of Products</h2>
<p>
    @Html.ActionLink("Add A Product", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th><!--end of first table header-->
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th><!--end of second table header-->
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th><!--end of third table header-->
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th><!--end of fourth table header-->

    </tr><!--end table header row-->
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td><!--end table data item 1-->
    <td>
        @Html.DisplayFor(modelItem => item.InventoryCount)
    </td><!--end of second table header-->
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td><!--end of third table header-->
    <td>
        @Html.DisplayFor(modelItem => item.IsFood)
    </td><!--end of fourth table header-->
    <td>
        @Html.ActionLink("Change", "Edit", new { id = item.ProductId }) |
        @Html.ActionLink("More Info", "Details", new { id = item.ProductId }) |
        @Html.ActionLink("Remove", "Delete", new { id = item.ProductId }) |
    </td><!--end of info for data-->
</tr><!--end table data row-->
    }
</table><!--End of table-->

